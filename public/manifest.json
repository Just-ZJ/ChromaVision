{
  "short_name": "ChromaV",
  "name": "ChromaVision",
  "description": "This extension will accomodate the colorblind",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
